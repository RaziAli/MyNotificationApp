<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000000"
    tools:context="com.example.rizwan.mynotificationapp.Repeating2">

    <TextView
        android:id="@+id/txt_secondNotification"
        android:text="Nothing in life goes exactly to plan. Remind yourself right now that the only things you can control are your thoughts and your reactions/actions today. Everything else is uncontrollable. Focus and make this day the best it can be.\nAmor Fati my friend."
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:padding="2dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_done"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_secondNotification"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txt_secondNotification"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Done" />

</RelativeLayout>
