<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000000"

    tools:context="com.example.rizwan.mynotificationapp.MainActivity">
<ImageView
    android:layout_above="@+id/txt_discription"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="36dp"
    android:src="@drawable/mmskullblack" />

    <TextView
        android:id="@+id/txt_discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_closeApp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="24dp"
        android:layout_marginBottom="174dp"
        android:fontFamily="adobe-garamond-pro"
        android:text="Please Select Notification time! From now on you will receive Notification after every 3 hours till 10pm."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/txt_settings"
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_margin="18dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_closeApp"
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:textSize="18sp"
        android:textColor="#FF9800"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_cancelNotification"
        android:visibility="gone"
        android:text="Cancel"
        android:layout_margin="2dp"
        android:layout_below="@id/txt_discription"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/txt_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
