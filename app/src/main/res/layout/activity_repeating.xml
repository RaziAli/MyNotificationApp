<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000000"
    tools:context="com.example.rizwan.mynotificationapp.Repeating">


    <TextView
        android:id="@+id/txt_firstNotification"
        android:text="This day will never, ever, happen again.Take a moment right now to be thankful for it. To celebrate it. And commit right now to choose and do 1 thing to make this your greatest day - for it will be the last &quot;today&quot; you'll ever encounter. There will never be another day exactly like today. \nMemento Mori my friend."
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_done"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_firstNotification"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txt_firstNotification"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Done" />

</RelativeLayout>
