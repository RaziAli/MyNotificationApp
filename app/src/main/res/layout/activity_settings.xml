<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.rizwan.mynotificationapp.Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BDBDBD">

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:numbersBackgroundColor="#BDBDBD"
                android:layout_marginTop="50dp" />


            <TextView
                android:id="@+id/txt_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="16dp"
                android:text="Support" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cb_timePicker"
                android:layout_centerHorizontal="true"
                android:text="Save" />


            <CheckBox
                android:id="@+id/cb_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timePicker"
                android:textColor="#ffffff"
                android:shadowColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:text="Set Application Default" />

            <CheckBox
                android:id="@+id/cb_timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cb_default"
                android:layout_alignStart="@+id/cb_default"
                android:textColor="#ffffff"
                android:layout_below="@+id/cb_default"
                android:text="Set User Defined Time" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
