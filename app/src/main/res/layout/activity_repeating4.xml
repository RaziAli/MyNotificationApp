<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000000"
    tools:context="com.example.rizwan.mynotificationapp.Repeating4">

    <TextView
        android:id="@+id/txt_fourthNotification"
        android:text="Did today matter? Was it a day to remember? If so, Macte hac gloria! Can't remember anything in particular that made a difference? Then make it happen, you will never get another chance like today.\nCarpe Diem my friend."
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_done"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_fourthNotification"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txt_fourthNotification"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Done" />


</RelativeLayout>
